<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
  	<servlet-name>/Login</servlet-name>
  	<display-name>Login</display-name>
  	<servlet-class>com.nagarro.login.Login</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>/SaveProducts</servlet-name>
  	<display-name>SaveProducts</display-name>
  	<servlet-class>com.nagarro.product.SaveProducts</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>/EditProduct</servlet-name>
  	<display-name>EditProduct</display-name>
  	<servlet-class>com.nagarro.product.EditProduct</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>/DeleteProduct</servlet-name>
  	<display-name>DeleteProduct</display-name>
  	<servlet-class>com.nagarro.product.DeleteProduct</servlet-class>
  </servlet>
    
<error-page>
  <exception-type>java.lang.Throwable</exception-type>
  <location>/AppExceptionHandler</location>
</error-page>
</web-app>
